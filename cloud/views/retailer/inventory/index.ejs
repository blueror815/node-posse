<% var title = "Dashoboard" %>
<% include ../_header %>

    <body id="mainBody">
        <!-- #container -->
        <div id="container">
            <div class="row">
                <div class="large-12 column">
                    <% include ../_topbar %>

                    <main id="main" class="row">
                        <% var activeMenu = "inventory" %>
                        <% include ../_sidebar %>
                        
                        <div class="large-9 medium-8 column">
                            <!-- Tabs content -->
                            <div id="main-content" class="tabs-content">
                            
                                <p><%= message %></p>
                                
                                <div id="inventory" class="content active">
                                    <!--
                                        INVENTORY-DISTRIBUTOR VIEW ACTION
                                    -->
                                    <header class="store-action">
                                        <span class="h4">&nbsp;</span>
                                        
                                        <!-- Actions -->
                                        <ul class="no-bullet inline-list right">
                                            <li><a class="button secondary" href="inventory-order" title="Add Beer"><i class="fa fa-plus"></i>&nbsp;&nbsp;Add Beer</a></li>
                                        </ul>
                                    </header> <!-- end of: INVENTORY-DISTRIBUTOR VIEW ACTION -->
                                    
                                    <article>
                                        
                                        <table class="table table--dsh">
                                            <thead>
                                                <tr>
                                                    <th class="table--dsh__header">SKU</th>
                                                    <th class="table--dsh__header">Price</th>
                                                    <th class="table--dsh__header">Name</th>
                                                    <th class="table--dsh__header">Distributor</th>
                                                    <th class="table--dsh__header">Quantity</th>
                                                    <th class="table--dsh__header">Demand</th>
                                                    <th class="table--dsh__header">Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <!-- SKU -->
                                                    <td>Bottles</td> <!-- end of SKU -->

                                                    <!-- Price -->
                                                    <td>$12.99</td> <!-- end of Price -->

                                                    <!-- Name -->
                                                    <td>Avery Fortuna</td> <!-- end of name -->

                                                    <!-- Distributor -->
                                                    <td>S.K.I. BEER</td> <!-- end of distributor -->

                                                    <!-- Quantity -->
                                                    <td>56</td> <!-- end of quantity -->

                                                    <!-- Demand -->
                                                    <td>50</td> <!-- end of demand -->

                                                    <!-- Status -->
                                                    <td>in stock</td> <!-- end of: Status -->
                                                </tr>

                                                <tr>
                                                    <!-- SKU -->
                                                    <td>Bottles</td> <!-- end of SKU -->

                                                    <!-- Price -->
                                                    <td>$10</td> <!-- end of Price -->

                                                    <!-- Name -->
                                                    <td>Delirium Deliria</td> <!-- end of name -->

                                                    <!-- Distributor -->
                                                    <td>Baxter Brewing</td> <!-- end of distributor -->

                                                    <!-- Quantity -->
                                                    <td>72</td> <!-- end of quantity -->

                                                    <!-- Demand -->
                                                    <td>100</td> <!-- end of demand -->

                                                    <!-- Status -->
                                                    <td class="status-arriving">arrives 7/09/2015</td>
                                                </tr>
                                            </tbody>
                                        </table>

                                        <!-- .outer-actions -->
                                        <div class="outer-actions">
                                            <!-- Bulk actions -->
                                            <ul class="no-bullet inline-list bulk-actions right">
                                                <!-- Edit -->
                                                <li><a class="button alert" href="inventory-edit" title="Edit">
                                                        <i class="fa fa-pencil"></i> Edit
                                                    </a></li> <!-- end of edit -->
                                            </ul> <!-- end of bulk actions -->

                                            <!-- Items pagination -->
                                            <div class="pagination-centered">
                                                <ul class="pagination">
                                                    <li class="arrow unavailable"><a href="">&lt;</a>
                                                    </li><li class="current"><a href="">1</a>
                                                    </li><li><a href="">2</a>
                                                    </li><li><a href="">3</a>
                                                    </li><li><a href="">4</a>
                                                    </li><li class="arrow"><a href="">&gt;</a></li>
                                                </ul>
                                            </div> <!-- end of items pagination -->

                                        </div> <!-- end of .outer-actions -->
                                        
                                    </article>
                                </div>

                            </div> <!-- end of tabs content -->
                        </div>
                    </main>
                </div>
            </div>
        </div> <!-- end of #container -->
       <!--
            DELETE MODAL DIALOG
        -->
        <div id="deleteStore" class="reveal-modal text-center" data-reveal aria-labelledby="storeTitle"
            aria-hidden="true" role="dialog">
            
            <!-- Store icon: favicon.png -->
            <img class="favicon" src="../assets/retailer/images/favicon.png" alt="notibrew" title="notibrew"/> <!-- end of store icon -->
            
            <!-- Store name
                NOTE: Store name is hidden, and it must be present for aria-labelledby attribute -->
            <h2 id="storeTitle" class="hidden-for-small-up">Top Hops Beer Shop</h2> <!-- end of store name -->
            
            <!-- Confirmation message -->
            <p><strong>Are you sure you want to delete this store?</strong></p> <!-- end of confirmation message -->
            
            <!-- Actions -->
            <ul class="no-bullet inline-list action-group">
                <!-- Yes action -->
                <li>
                    <a href="#" class="button alert" title="Yes">Yes</a></li> <!-- end of yes action -->
                
                <!-- No action
                    NOTE: Please change the data-modal value to match the modal id; this will be use to reference which modal to close -->
                <li>
                    <a id="close-modal" class="button secondary" href="#" title="No" data-modal="deleteStore">No</a></li> <!-- end of no action -->
            
            </ul> <!-- end of actions -->
            
        </div> <!-- END OF DELETE MODAL DIALOG -->

        <div id="orderDetails" class="reveal-modal text-center" data-reveal aria-labelledby="orderTitle"
            aria-hidden="true" role="dialog">
            
            <!-- Store icon: favicon.png -->
            <img class="favicon" src="../assets/retailer/images/favicon.png" alt="notibrew" title="notibrew"/> <!-- end of store icon -->
            
            <!-- Title message -->
            <h4 id="orderTitle" class="title">Order Details</h4> <!-- end of title message -->
            
            <!-- Order summary -->
            <table class="order-summary">
                <thead>
                    <tr>
                        <th>Beer Name</th>
                        <th>Price</th>
                        <th class="text-right">Qty</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <!-- Beer name -->
                        <td>Sapporo Premium Lager</td> <!-- end of beer name -->
                        
                        <!-- Price -->
                        <td>$15</td> <!-- end of price -->
                        
                        <!-- Quantity -->
                        <td class="text-right">10</td> <!-- end of quantity -->
                    </tr>
                    <tr>
                        <!-- Beer name -->
                        <td>Chimay</td> <!-- end of beer name -->
                        
                        <!-- Price -->
                        <td>$22</td> <!-- end of price -->
                        
                        <!-- Quantity -->
                        <td class="text-right">15</td> <!-- end of quantity -->
                    </tr>
                </tbody>
            </table> <!-- end of order summary -->
            
            <!-- Actions -->
            <ul class="no-bullet inline-list action-group" style="margin-bottom: 0;">
                <li><a id="lnk-orderDetails" class="button secondary" href="#" data-details>Check inventory and distributor</a></li>
            </ul> <!-- end of actions -->
            
            <!-- 
                FULL ORDER DETAIL
            -->
            <article id="orderFullDetails" class="full-details">
                <!-- IN STOCK -->
                <article>
                    <!-- Legend -->
                    <h5>IN STOCK</h5> <!-- endo of legend -->
                    
                    <!-- In stock summary -->
                    <table class="order-summary">
                        <thead>
                            <tr>
                                <th>Beer Name</th>
                                <th>Price</th>
                                <th class="text-right">Qty</th>
                            </tr>
                        </thead>
                        
                        <tbody>
                            <tr>
                                <!-- Beer name -->
                                <td>Sapporo Premium Lager</td> <!-- end of beer name -->
                                
                                <!-- Price -->
                                <td>$15</td> <!-- end of price -->
                                
                                <!-- Quantity -->
                                <td class="text-right">10</td> <!-- end of quantity -->
                            </tr>
                            <tr>
                                <!-- Beer name -->
                                <td>Chimay</td> <!-- end of beer name -->
                                
                                <!-- Price -->
                                <td>$22</td> <!-- end of price -->
                                
                                <!-- Quantity -->
                                <td class="text-right">0</td> <!-- end of quantity -->
                            </tr>
                        </tbody>
                    </table> <!-- end of in stock summary -->
                </article> <!-- END OF IN STOCK -->
                
                <!-- ORDER  -->
                <article>
                    <!-- Legend -->
                    <h5>IN STOCK</h5> <!-- endo of legend -->
                    
                    <!-- Order summary -->
                    <table class="order-summary">
                        <thead>
                            <tr>
                                <th>Beer Name</th>
                                <th>Price</th>
                                <th class="text-right">Qty</th>
                            </tr>
                        </thead>
                        
                        <tbody>
                            <tr>
                                <!-- Beer name -->
                                <td>Chimay</td> <!-- end of beer name -->
                                
                                <!-- Price -->
                                <td>$22</td> <!-- end of price -->
                                
                                <!-- Quantity -->
                                <td class="text-right">15</td> <!-- end of quantity -->
                            </tr>
                        </tbody>
                    </table> <!-- end of order summary -->
                </article> <!-- END OF ORDER -->
                
                <!-- Actions -->
                <ul class="no-bullet inline-list action-group">
                    <!-- Finalize action -->
                    <li>
                        <a href="#" class="button secondary" title="Finalize">Finalize</a></li> <!-- end of finalize action -->

                    <!-- Order action -->
                    <li>
                        <a class="button" href="#" title="Order">Order</a></li> <!-- end of order action -->

                </ul> <!-- end of actions -->
            </article> <!-- END OF FULL ORDER DETAILS -->
            
        </div> <!-- END OF ORDER DETAILS MODAL DIALOG -->
